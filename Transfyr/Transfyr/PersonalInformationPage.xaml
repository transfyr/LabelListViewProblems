        <BoxView BackgroundColor="White"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 AbsoluteLayout.LayoutFlags="All"
                 AbsoluteLayout.LayoutBounds="0,0,1,.24"/>
        <Forms9Patch:Label x:Name="profilePictureLabel" Text="Profile Picture"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           BackgroundColor="White"
                           TextColor="Black" FontFamily="Courier"
                           AutoFit="Width" Lines="1"
                           FittedFontSizeChanged="Handle_FittedFontSizeChanged_1"
                           AbsoluteLayout.LayoutFlags="All"
                           AbsoluteLayout.LayoutBounds="0,0,0.3,0.03"/>
