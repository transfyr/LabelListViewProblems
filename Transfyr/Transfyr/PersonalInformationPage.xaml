                           TextColor="Black" FontFamily="Courier"
                           AutoFit="Width" Lines="1"
                           AbsoluteLayout.LayoutFlags="All"
                           AbsoluteLayout.LayoutBounds="0.378,0,0.18,0.06"/>
        <Forms9Patch:Label x:Name="fNameLabel" Text="First Name:"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center"
                           BackgroundColor="White"
                           TextColor="Black" FontFamily="Courier"
                           AutoFit="Width" Lines="1"
                           FittedFontSizeChanged="Handle_FittedFontSizeChanged"
                           AbsoluteLayout.LayoutFlags="All"
                           AbsoluteLayout.LayoutBounds="0.378,0.06382,0.18,0.06"/>
        <Forms9Patch:Label x:Name="lNameLabel" Text="Last Name: "
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center"
                           BackgroundColor="White"
                           TextColor="Black" FontFamily="Courier"
                           AutoFit="Width" Lines="1"
                           AbsoluteLayout.LayoutFlags="All"
                           AbsoluteLayout.LayoutBounds="0.378,0.1276,0.18,0.06"/>
        <Forms9Patch:Label x:Name="suffixLabel" Text="Suffix:    "
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center"
                           BackgroundColor="White"
                           TextColor="Black" FontFamily="Courier"
                           AutoFit="Width" Lines="1"
                           AbsoluteLayout.LayoutFlags="All"
                           AbsoluteLayout.LayoutBounds="0.378,0.19148,0.18,0.06"/>
        <Entry x:Name="prefixEntry" Text="{Binding item.prefix_bc}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               HorizontalTextAlignment="Start"
               BackgroundColor="White"
               TextColor="Black"
               Placeholder="Enter Name Prefix"
               PlaceholderColor="Black"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="1,0,0.5,0.06"/>
        <Entry x:Name="fNameEntry" Text="{Binding item.firstName_bc}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               HorizontalTextAlignment="Start"
               BackgroundColor="White"
               TextColor="Black"
               Placeholder="Enter First Name"
               PlaceholderColor="Black"
               AbsoluteLayout.LayoutFlags="All"
