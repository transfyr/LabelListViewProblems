                           BackgroundColor="{StaticResource logoBackgroundColor}"
                           TextColor="{StaticResource logoDarkBlue}"
                           AutoFit="Width" Lines="0"
                           FittedFontSizeChanged="Handle_FittedFontSizeChanged_2"
                           AbsoluteLayout.LayoutFlags="All"
