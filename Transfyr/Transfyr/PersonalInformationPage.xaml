               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               BackgroundColor="White"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0,0.03797,0.3,0.21">
            <Image.Source>
                <UriImageSource Uri="{Binding item.personalImageLocation_bc}"/>
            </Image.Source>
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped = "changePhoto" CommandParameter="personal"/>
            </Image.GestureRecognizers>
        </Image>
